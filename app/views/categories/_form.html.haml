= form_for @category do |f|
  -if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :order
    = f.text_field :order
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :new
    = f.check_box :new
  .field
    = f.label :top
    = f.check_box :top
  .actions
    = f.submit 'Save'
