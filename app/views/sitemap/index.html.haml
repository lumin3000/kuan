    %a.location.contact{name: "contact", href: "mailto:"+contact_address, :target => "_blank", :title => "意见反馈"}
    %a.sub.sub_construct{name: "construct", href: url_with_subdomain("kccc"), :target => "_blank"}宽岛建设
