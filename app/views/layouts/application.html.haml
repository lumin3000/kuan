!!!
%html
  %head
    %meta{'http-equiv' => 'content-type', 'content' => 'text/html; UTF-8'}
    %title<
      = content_for?(:title) ? content_for(:title) : "宽岛"
    = stylesheet_link_tag "base"
    - if not @css.nil?
      = stylesheet_link_tag *(@css.uniq)
    - js 'application', 'mootools-more', 'rails', 'mootools-core'
    - @js.uniq.reverse!.each do |f|
      = javascript_include_tag f
    = csrf_meta_tag
    %link{ :rel => "shortcut icon", :href => "/images/favicon.ico" }
    = yield :head if content_for?(:head)
  %body
    #container{class: content_for?(:site_layout) ? yield(:site_layout) : "site"}
      = use_header(@header)
      = content_for?(:content) ? yield(:content) : yield
    :javascript
        window.document.addEvent("domready", function() {
            var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
            new Asset.javascript(gaJsHost + "google-analytics.com/ga.js", {
                onload: function() {
                    var pageTracker = _gat._getTracker("UA-8893573-3");
                    pageTracker._initData();
                    pageTracker._trackPageview();
                }
            });
        });
