- content_for :title, "#{@tag}_宽岛"

- content_for :head do
  = stylesheet_link_tag 'post_display', 'dashboard'

- @site_layout = "site" unless @blogs.empty?

.latest
  %h1= @tag
  .timeline{ :data => { :widget => "sugar" } }
    = render :partial => "posts/post_full", :collection => @posts, :as => :post
  = pagination_standard  
- unless @blogs.empty?
  .editors
    .list
      = render :partial => "blog", :collection => @blogs, :as => :blog
