- @sub_title = "修改账户信息"
- content_for :title, @sub_title

= form_for(@user, :html => {:class => 'middle_box'}) do |f|
  %h1
    账户设置
  .nick_box
    = f.label :name, '用户名'
    = f.text_field :name
  .error
    &nbsp;
    = @user.errors[:name].first
  .email_box
    = f.label :email, '邮箱'
    = f.text_field :email
  .error
    &nbsp;
    = @user.errors[:email].first
  .password_box
    = f.label :password, '密码'
    = f.password_field :password
  .error
    &nbsp;
    = @user.errors[:password].first
  .password_box
    = f.label :password_confirmation, '确认密码'
    = f.password_field :password_confirmation
  .error
    &nbsp;
    = @user.errors[:password_confirmation].first
  .submit_box
    = f.submit " "
