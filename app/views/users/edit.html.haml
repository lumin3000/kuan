%h1 修改账户信息

= form_for(@user) do |f|
  = render 'error_messages', :obj => f.object
  .field
    = f.label :email 
    %br
    = f.text_field :email 
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :password
    %br
    = f.password_field :password
  .field
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation
  .action= f.submit "提交" 
