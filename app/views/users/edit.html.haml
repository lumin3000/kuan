- @sub_title = "修改账户信息"
- content_for :title, @sub_title

= form_for(@user, :html => {:class => 'middle_box'}) do |f|
  %h1<
    账户设置
  .nick_box<
    = f.label :name, '用户名'
    = f.text_field :name
  .error<
    = flash[:name_error]
    &nbsp;
  .email_box<
    = f.label :email, '邮箱'
    = f.text_field :email
  .error<
    = flash[:email_error]
    &nbsp;
  .password_box<
    = f.label :password, '密码'
    = f.password_field :password
  .error<
    = flash[:password_error]
    &nbsp;
  .password_box<
    = f.label :password_confirmation, '确认密码'
    = f.password_field :password_confirmation
  .error<
    = flash[:password_confirmation_error]
    &nbsp;
  .submit_box<
    = f.submit " "
