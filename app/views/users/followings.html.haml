- @sub_title = @nav_user_title = "我关注的"
- content_for :title, @sub_title

.list_box.following
  %h1
    ="我关注了#{@blogs.length}个页面"
  %ul
    - @blogs.each do |blog|
      %li{ :id => "blog_#{blog.id}" }
        .avatar_60
          ._image{style: "background:url(#{blog.icon.url_for(:medium)})"}<
            %a{ :href => blog_path(blog) }
        ._name
          %a{ :href => blog_path(blog) }
            = blog.title
        = follow_tag blog
