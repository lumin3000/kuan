- content_for :title, "我关注的页面_宽岛"

.middle_box.following
  %h1
    ="我关注了#{@blogs.length}个页面"

  - @blogs.each do |blog|
    .follower{ :id => "blog_#{blog.id}" }
      .avatar
        %a{ :href => blog_path(blog) }
          %img{ :src => blog.icon.url_for(:medium) }
      .fo_name
        %a{ :href => blog_path(blog) }
          = blog.title
      = follow_tag blog
