- content_for :head do
  = stylesheet_link_tag 'post_display', 'dashboard'
  :javascript
    document.addEvent('domready', function(){
      K.posts.init()
    });

- flash.each do |k, v|
  %div{:class => "flash_users_#{k}"}= v

.header
  %a.logo{href: "/home"}
  .dash_navigator
    %a{href: edit_user_path(current_user)}设置
    &nbsp;| 邀请好友加入&nbsp;
    %input.invite{readonly: true, value: "/signup/#{current_user.inv_code}"}><
    &nbsp;|&nbsp;
    %a.logout{href: "/signout"}><
.dashboard
  .menu
    .dash_operation
      .my_follow
        %a{href: "/followings"}
          %span.menu_arraw &nbsp;
          %span.icon_follow &nbsp;
          %span.text_follow
            关注了
            = @user.subs.count
            个页面
        %a{href: "#"}
          %span.icon_config &nbsp;
      %hr
    .my_pages.shrinked{data: {widget: "shrinked", trigger: ".selector"}}
      %a.selector{href: "/home/#{@blog.uri}"}
        = @blog.title
      - @other_blogs = @blogs.reject {|b| b == @blog}
      .selector_open
        .selector_open_head.selector
          = @blog.title
        .selector_open_menu
          - @other_blogs.each do |b|
            %div
              %a.other_blog{href: "/home/#{b.uri}"}<
                = b.title
        .selector_open_footer
          %a{href: "/blogs/new"} +新建页面
    .page_operation
      %div
        %span.icon_posts &nbsp;
        %span
          %a{href: "/home/#{@blog.uri}"}
            = "#{@blog.total_post_num}篇文章"
      %div
        %span.icon_followed &nbsp;
        %span
          %a{href: followers_blog_path(@blog)}
            = "#{@blog.followers_count}人关注"
      %div
        %span.icon_config &nbsp;
        %span
          %a{href: edit_blog_path(@blog)} 自定义
      -#
        %div
          %span.icon_remove &nbsp;
          %span
            %a{href: "#"} 删除
      %div
        %span.icon_view &nbsp;
        %span
          %a{href: root_url(:subdomain => @blog.uri)} 查看
  .main
    .head
      .head_avatar<
        %a{href: root_url(:subdomain => @user.primary_blog.uri)}<
          =image_tag @user.primary_blog.icon.url_for(:medium)
      .post_area
        .left
        %a.text{href: "/posts/new/text"}
        %a.picture{href: "/posts/new/pics"}
        %a.link{href: "/posts/new/link"}
        %a.video{href: "/posts/new/video"}
        .right
    .timeline
      - @posts.each do |p|
        .article
          .avatar
            .image<
              %a{href: root_url(:subdomain => p.blog.uri)}<
                =image_tag p.blog.icon.url_for(:medium)
            %div<
              %a.page_name{href: url_for(p.blog)}= p.blog.title
          .content= render_post p
    = pagination(@posts)
