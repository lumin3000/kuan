%h1= link_to @blog.title, root_url(:subdomain => @blog.uri)

- if signed_in?
  - if custom_auth? @blog
    .link_to_custom= link_to "自定义", edit_blog_path(@blog)
  - if follow? @blog
    .link_to_unfollow = link_to "取消关注"
  - else
    .link_to_follow = link_to "关注"

- @posts.each do |p|
  = render_post p
