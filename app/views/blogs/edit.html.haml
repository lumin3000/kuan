= form_for(@blog, :html => { :class => "middle_box new_page edit_page" }) do |f|
  %h1<
    设置页面
  .page_name<
    = f.label :title, "页面名称"
    = f.text_field :title
  .error<
    &nbsp;
    = @blog.errors[:title].first
  .page_url<
    = f.label :uri, "自定义网址"
    = f.text_field :uri
    %span<
      = server_name
  .error<
    %span.suggestion<
      (网址随时都可以修改)
    &nbsp;
    = @blog.errors[:uri].first
  .page_logo<
    %label<
      %img{ :src => (@blog.nil? ? "" : @blog.icon ) }
    %input{ :type => 'file', :id => 'image_uploader', :name => 'file', :autocomplete => 'off' }
  .submit_box.edit_box<
    = f.submit " "
