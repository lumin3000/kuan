;(function() {
  var context = $('tar_follow_<%= @blog.id %>')
  if (!context) return
  var btnFollow = context.getElement('.btn_follow')
    , btnUnfollow = context.getElement('.btn_unfollow')
  if (<%= @follow %>) {
    btnFollow && btnFollow.hide()
    btnUnfollow && btnUnfollow.show()
  } else {
    btnFollow && btnFollow.show()
    btnUnfollow && btnUnfollow.hide()
  }
})()
