- unless current_user.nil? || blog.edited?(current_user)
  %a{ :href => follow_toggle_blog_path(blog), :id => "tar_follow_#{blog.id}", :data => {:method => "post", :remote => "true"} }
    .btn_unfollow{ :style => (current_user.all_blogs.include?(blog) ? "" : "display:none") }
    .btn_follow{ :style => (current_user.all_blogs.include?(blog) ? "display:none" : "") }
