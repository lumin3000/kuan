#kmon
  .kmon_inner
    .logo
    .slogan
      精彩内容，尽在宽岛......
      %a.register{href: '#'}
        立即注册
%div{style: "display: none !important;"}
  #kmon_register
    .title 注册宽岛，查看更多精彩内容......
    .body{data: {widget: 'validatedForm'}}
      = form_for :user, url: "#{fucking_root}users" do |f|
        %input{type: 'hidden', name: 'code', value: @code}
        .field
          .label
            = f.label :name, '昵称'
            = f.text_field :name, 'data-type' => 'username'
          .error{data: {displayErrorFor: 'user[name]'}}
        .field
          .label
            = f.label :email, '邮箱'
            = f.email_field :email, 'data-type' => 'email'
          .error{data: {displayErrorFor: 'user[email]'}}
        .field
          .label
            = f.label :password, '密码'
            = f.password_field :password
          .error{data: {displayErrorFor: 'user[password]'}}
        = f.submit '注册', class: 'submit'
      %a.log_in{href: fucking_root} 有账户，登陆宽岛
