= form_for(@blog, :html => { :class => "middle_box new_page" }) do |f|
  %h1<
    新建页面
  %h2<
    按兴趣的不同
  .page_name<
    = f.label :title, "页面名称"
    = f.text_field :title
  .error<
    &nbsp;
    = @blog.errors[:title].first
  .page_url<
    = f.label :uri, "自定义网址"
    = f.text_field :uri
    %span<
      = server_name
  .error<
    %span.suggestion<
      (网址随时都可以修改)
    &nbsp;
    = @blog.errors[:uri].first
  .submit_box<
    = f.submit " "
