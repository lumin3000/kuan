- @post_type = capture do
  图片

- content_for :form do
  %span
    %input{ :type => 'file', :id => 'image_uploader', :name => 'file', :autocomplete => 'off' }
    %input{ :type => 'text', :id => 'url_uploader_url', :alt => 'http://' }
    %input{ :type => 'button', :id => 'url_uploader_btn', :value => '提交链接' }
  %input{ :id => 'photo_template', :value => render_form_photo(nil), :type => 'hidden' }
  %div{ :id => 'photos_list' }
    - post.photos.each do |p|
      = render_form_photo p
  %div{ :type => 'option_text' }
    %span
      %a{ :id => 'tar_tog_url', :class => 'image_url_starter slight', :href => '#' }
        提交一个图片网址
      %a{ :id => 'tar_tog_local', :class => 'image_local_starter slight', :href => '#', :style => 'display:none' }
        提交本地图片
    %span
      %a{ :id => 'tar_tog_textarea', :class => 'textarea_starter slight', :href => '#' }
        +添加描述
      %a{ :id => 'tar_tog_textarea_close', :class => 'textarea_closer slight', :href => '#', :style => 'display:none' }
        +关闭描述
    
  %div{ :class => 'text', :style => 'display:none' }
    = text_area_tag 'content', post.content
  
  :javascript
    document.addEvent('domready', function(){
    });
