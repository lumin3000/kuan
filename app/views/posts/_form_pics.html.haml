%span
  %input{ :type => 'file', :id => 'image_uploader', :name => 'file' }
%ul
  - post.photos.each do |p|
    %li
      = p.image.url_for(:original)
#image_status
%span
  = label_tag 'content'
  = text_area_tag 'content', post.content
  
:javascript
  document.addEvent('domready', function(){
    remote_file('image_uploader', '/images', function(){
      console.log('---');
      console.log(this.contentDocument.body.innerHTML);
    });
  });
