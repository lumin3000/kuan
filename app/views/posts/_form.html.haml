= render partial: sub_template, object: @post,
  as: :post

%h1= "#{@action}#{@post_type}"

= form_t params, do
  = hidden_field_tag :type, @post.type
  - if @post.new_record?
    = hidden_field_tag 'author_id', @user.id

  = content_for :form
  .operation
    .page_selector
      .my_pages
        - if @post.new_record?
          %p
            -# 发布至:
            %select#blog_id{name: 'blog_id', data: {widget: 'prettySelect'}}
              - @target_blogs.each do |b|
                %option{value: b.id}
                  = b.title
    .cancel
    .send
      %button{type: "submit", value: "Commit"}
        SUBMIT
