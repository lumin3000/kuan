%div{ :id => (form_photo.nil? ? "" : "photo_#{form_photo.id}"), :name => 'photo_item', :class => 'list_image' }
  = hidden_field_tag "photos[][image]", (form_photo.nil? ? "" : form_photo.image.id), :class => "image_id"
  = hidden_field_tag "photos[][id]", (form_photo.nil? ? "" : form_photo.id)
  %div{ :class => "the_drag_handle", :alt => "鼠标拖动这里可以移动图片位置" }<
    &nbsp;
  %div{ :class => "the_image" }<
    %a{ :href => (form_photo.nil? ? "#" : form_photo.image.url_for(:original)), :rel => 'lightbox', :target => "_blank" }<
      %img{ :name => "tar_img", :src => (form_photo.nil? ? "" : form_photo.image.url_for(:small)), :alt => '' }
  %div{ :class => "the_text" }<
    = text_field_tag "photos[][desc]", (form_photo.nil? ? "" : form_photo.desc), :alt => "给图片写点什么吧"
    - if form_photo.nil?
      %span{ :name => "tar_process", :style => "display:none" }<
        上传中...
  %div{ :class => "the_close", :alt => "删除" }<
    &nbsp;
